/* pages/admin/admin.wxss */

page{
  background: #58a;
  background-image: repeating-linear-gradient(30deg, 
              hsla(0,0%,100%,.1), hsla(0,0%,100%,.1) 15px,
              transparent 0, transparent 30px);
  height: 100%;
}


.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 208rpx;
  height: 208rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: white;
}

button{
    margin:0.5em;
	  padding: .3em, .8em;
    border: 1px solid rgba(0,0,0,.1);
    background: #0A5 linear-gradient(hsla(0,0%,100%,.2),transparent);
    border-radius: .2em;
    box-shadow: 0 .1em .4em rgba(0,0,0,.5);
    color: white;
    text-shadow: 0 -.1em .1em rgba(0,0,0,.5);
    font-size: 130%;
    line-height: 220%;
}

button.user{
  float: left;
  margin-top: 200px;
}

